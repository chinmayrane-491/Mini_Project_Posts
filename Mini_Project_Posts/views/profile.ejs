<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mini Project</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <style>
      .form-container {
        width: 500px;
        margin: auto;
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 8px;
        box-shadow: 0 4px 50px rgb(47, 207, 221);
      }

      .btn-primary {
        width: 40%;
      }
      .textarea {
        border: 4px solid rgb(0, 225, 246);
        box-shadow: 0 4px 4px rgb(47, 207, 221);
        border-radius: 10px;
        font-size: large;
      }
      .text-sucess {
        text-decoration: none;
        font-size: 18px;
      }
      .text-dark {
        text-decoration: none;
        font-size: 18px;
        margin-left: 5px;
      }
      .box {
        width: 100px;
        height: 100px;
        background-color: #f0f0f0;
        border: 1px solid #ccc;
        margin-left: 200px;
      }
      .img {
        background-size: cover; 
        background-repeat: no-repeat; 
        background-position: center; 
        width: 100px;
        height: 100px;
    }
    </style>
  </head>

  <body class="bg-dark text-white">
    <div
      class="bg-success d-flex justify-content-between align-items-center p-2"
    >
      <h1 class="header-title text-white">Profile Page</h1>
      <a href="/logout" class="btn btn-danger btn-sm header-button">Logout</a>
    </div>
    <br />
    <div class="container d-flex align-items-center justify-content-center">
      <div class="containe text-center">
        <div>
          <div class="box">
            <img src="/uploads/<%= user.profilepic %>" class="img">
          </div>
          <h3 class="mt-2"> Welcome <%= user.username %></h3>
        </div>
        <form method="post" action="/post" class="m-2">
          <label for="">
            <h4>Enter the Post here</h4> </label
          ><br />
          <textarea
            name="content"
            placeholder="Enter text"
            class="textarea"
            rows="5"
            cols="54"
            required
          ></textarea
          ><br /><br />
          <button type="submit" class="btn btn-primary btn-sm">
            Create Post
          </button>
          <a class="btn btn-primary btn-sm" href="/profile/upload">Upload Post</a>
        </form>
      </div>
    </div>

    <div class="container m-4">
      <h3>Your Post</h3>
      <div class="d-flex flex-row mb-3">
        <% user.post.reverse().forEach(post => { %>
        <div class="card m-3" style="width: 20rem">
          <div class="card-body">
            <h5 class="card-title text-primary">@<%= user.username %></h5>
            <p class="card-text"><%= post.content %></p>
            <small><%= post.likes.length %> likes</small><br />
            <a href="/like/<%= post._id %>" class="text-sucess">
              <%= post.likes.indexOf(user._id) === -1? "Like" : 'Unlike' %>
            </a>
            <a href="/edit/<%= post._id %>" class="text-dark">Edit</a>
          </div>
        </div>
        <% }) %>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
